<?xml version="1.0" encoding="UTF-8"?>
<inset xmlns:android="http://schemas.android.com/apk/res/android"
    android:insetTop="-2dp">
<shape android:shape="rectangle">
    <stroke android:width="1dp" android:color="@color/srePrimaryPastel"/>
    <gradient
        android:angle="90"
        android:startColor="@color/srePrimaryLight"
        android:centerColor="@color/sreWhite"
        android:endColor="@color/sreWhite"
        android:type="linear"
        android:centerY="0.3"/>

    <corners
        android:bottomLeftRadius="3dp"
        android:bottomRightRadius="3dp"/>
</shape>
</inset>